<UserControl x:Class="FuncQuizzes.components.MenuItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FuncQuizzes.components"
             mc:Ignorable="d" Name="this"
             d:DesignHeight="50" d:DesignWidth="200">
    <Border>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center">
            <Path Data="{Binding Icon, ElementName=this}" Stroke="{Binding Color, ElementName=this}"
                  Width="{Binding IconWidth, ElementName=this}"/>
            <TextBlock Text="{Binding Text, ElementName=this}"
                       Foreground="Black"
                       FontSize="15" 
                       Margin="10 4 0 0"
                       VerticalAlignment="Center"
                       FontFamily="{DynamicResource Kantumruy_Pro}"/>
        </StackPanel>
    </Border>
</UserControl>
