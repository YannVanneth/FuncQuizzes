<UserControl x:Class="FuncQuizzes.components.history_card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FuncQuizzes.components"
             mc:Ignorable="d" Name="this"
             d:DesignHeight="350" d:DesignWidth="500"
             Height="350" Width="500">
    
    <Border CornerRadius="18"
            Margin="0 10">
        <Border.Background>
            <ImageBrush ImageSource="{Binding ImageContent, ElementName=this}"/>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Border Background="{Binding CardColor, ElementName=this}"
                        Grid.Column="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Padding="10"
                        CornerRadius="0 0 12 12">
                    <TextBlock Text="កម្រិត"
                               Foreground="White"
                               FontSize="20"
                               FontFamily="{DynamicResource Moul}"/>
                </Border>

                <Border Grid.Column="1"
                        Background="{Binding LevelColor, ElementName=this}"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Padding="10"
                        CornerRadius="0 0 8 8"
                        Margin="10 0">
                    <TextBlock Text="{Binding Level,ElementName=this}"
                               Foreground="White"
                               FontSize="20"
                               FontFamily="{DynamicResource Moul}"/>

                </Border>

                <!--<Border Grid.Column="2"
                        Width="80"
                        Margin="0 20 0 0">
                    <Image Source="../assets/images/C++.png"/>
                </Border>-->
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="{Binding CardColor,ElementName=this}"
                        CornerRadius="0 10 10 0"
                        Padding="20 10"
                        VerticalAlignment="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Image Source="../assets/images/Correct.png"
                                           Width="30"
                                           Grid.Column="0"
                                       Margin="0 0 10 0"/>

                            <TextBlock Text="ត្រឹមត្រូវ"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       FontFamily="{DynamicResource Moul}"
                                       FontSize="16"
                                       Margin="0 0 15 0"
                                       Grid.Column="1"/>

                            <TextBlock Text="{Binding CorrectQuestNumber, ElementName=this}"
                                       Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="White"/>

                        </Grid>

                        <Grid Grid.Row="1"
                              Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Image Source="../assets/images/Incorrect.png"
                                           Width="30"
                                           Grid.Column="0"/>

                            <TextBlock Text="មិនត្រឹមត្រូវ"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       FontFamily="{DynamicResource Moul}"
                                       FontSize="16"
                                       Margin="10 0"
                                       Grid.Column="1"/>

                            <TextBlock Text="{Binding IncorrectQuestNumber, ElementName=this}"
                                       Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Grid>
                    </Grid>
                </Border>

                <Border Grid.Column="1">
                    <Image Source="{Binding Grade, ElementName=this}"
                           Width="140"/>
                </Border>
            </Grid>
            
            <StackPanel Grid.Row="2"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Margin="10 0">
                
                <TextBlock Text="កាលបរិច្ចេទ"
                           FontSize="18"
                           FontFamily="{DynamicResource Kantumruy_Pro}"
                           Margin="0 0 10 0"
                           Foreground="{Binding TextColor, ElementName=this}"/>
                <TextBlock Text="{Binding QuestDate, ElementName=this}"
                           FontSize="18"
                            FontFamily="{DynamicResource Kantumruy_Pro}"
                            Margin="0 0 10 0"
                           Foreground="{Binding TextColor, ElementName=this}"/>
                
                <TextBlock Text="រយះពេល"
                           FontSize="18"
                            FontFamily="{DynamicResource Kantumruy_Pro}"
                            Margin="0 0 10 0"
                           Foreground="{Binding TextColor, ElementName=this}"/>
                <TextBlock Text="{Binding QuestDuration,ElementName=this}"
                           FontSize="18"
                            FontFamily="{DynamicResource Kantumruy_Pro}"
                            Margin="0 0 10 0"
                           Foreground="{Binding TextColor, ElementName=this}"/>
            </StackPanel>
        </Grid>
        <!--<--><!--Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="20"
                      VerticalAlignment="Center">
