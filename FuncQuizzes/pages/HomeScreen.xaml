<Page x:Class="FuncQuizzes.pages.HomeScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:FuncQuizzes="clr-namespace:FuncQuizzes.components"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FuncQuizzes.pages"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="HomeScreen">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="0 5 0 0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border x:Name="Logo"
                    Grid.Column="0"
                    Height="80"
                    Margin="-30 0 0 0">
                <Image Source="../assets/images/FuncQuizzes.png"/>
            </Border>

            <Border Grid.Column="1">
                <TextBox Style="{StaticResource SearchBox}"
                         x:Name="SearchBox"
                         Text="ស្វែងរក"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         FontFamily="{DynamicResource Kantumruy_Pro}"
                         FontWeight="Bold"
                         GotFocus="TextBox_GotFocus"
                         LostFocus="SearchBox_LostFocus"/>
            </Border>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Margin="0 0 30 0">

                <Border Style="{DynamicResource AvatarPicture}"
                        Margin="10 0">
                    <Border.Background>
                        <ImageBrush ImageSource="../assets/icons/Person_noInfo.png"/>
                    </Border.Background>
                </Border>
                <TextBlock Text="ដាវីត"
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="Bold"
                           FontFamily="{DynamicResource Kantumruy_Pro}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Padding="20">
                <StackPanel>
                    <Border BorderBrush="DarkOrange"
                            BorderThickness="5 0 0 0"
                            Padding="5 0"
                            x:Name="HomePageBorder">
                        <Button Style="{DynamicResource MenuButton}"
                                HorizontalContentAlignment="Left"
                                x:Name="HomePage"
                                Click="HomePage_Click">
                            <FuncQuizzes:MenuItems Icon="{DynamicResource Home}"
                                                   Text="ទំព័រដើម"
                                                   IconWidth="25"
                                                   Color="DarkOrange"
                                                   Margin="10 0"
                                                   x:Name="HomeIcon"/>
                        </Button>
                    </Border>
                    
                    <StackPanel Margin="5"/> <!-- Spacer -->
                    
                    <Border Padding="5 0"
                            BorderThickness="5 0 0 0"
                            x:Name="HistoryPageBorder">
                        <Button Style="{DynamicResource MenuButton}"
                                HorizontalContentAlignment="Left"
                                x:Name="HistoryPage"
                                Click="HistoryPage_Click">
                                <FuncQuizzes:MenuItems Icon="{DynamicResource History}"
                                    Text="ប្រវត្តិ"
                                    IconWidth="25"
                                    Color="Black"
                                    Margin="10 0"
                                    x:Name="HistoryIcon"/>
                        </Button>
                    </Border>

                    <StackPanel Margin="5"/> <!-- Spacer -->

                    <Border Padding="5 0"
                            BorderThickness="5 0 0 0"
                            x:Name="AboutUsPageBorder">
                        <Button Style="{DynamicResource MenuButton}"
                                HorizontalContentAlignment="Left"
                                x:Name="AboutUsPage"
                                Click="AboutUsPage_Click">
                            <FuncQuizzes:MenuItems Icon="{DynamicResource Team}"
                                   Text="អំពីពួកយើង"
                                   IconWidth="23"
                                   Color="Black"
                                   Margin="10 0"
                                   x:Name="AboutIcon"/>
                        </Button>
                        
                    </Border>
                </StackPanel>
            </Border>
            
            <ScrollViewer Grid.Column="1"
                          VerticalScrollBarVisibility="Hidden">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="300"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                        Margin="0 0 20 0">
                        <FuncQuizzes:FuncQuizzesSlider/>
                    </Border>

                    <Border Grid.Row="1">
                        <StackPanel>
                            <FuncQuizzes:ContentList/>
                            <FuncQuizzes:ContentList/>
                            <FuncQuizzes:ContentList/>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
