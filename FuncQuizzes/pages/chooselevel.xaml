<Page x:Class="FuncQuizzes.pages.chooselevel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FuncQuizzes.pages"
      mc:Ignorable="d" Background="White"
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="chooselevel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#FF9D3C">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        Height="80" Width="140"
                        BorderBrush="#C5E1F6"
                        BorderThickness="2"
                        Margin="0 40 0 0"
                        CornerRadius="5 5 5 5">
                    <Border.Background>
                        <ImageBrush ImageSource="../assets/icons/func.jpg"/>
                    </Border.Background>

                </Border>
                <TextBlock Grid.Column="1"
                           FontFamily="{StaticResource Moul}"
                           Text="សូមធ្វើការជ្រើសរើសកម្រិតដើម្បីឆ្លើយសំណួរ"
                           Margin="0 50 0 0"
                           Foreground="White"
                           FontSize="30"/>
            </Grid>
        </StackPanel>
        <Grid Grid.Row="1" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" >
                <Border.Background>
                    <ImageBrush ImageSource="../assets/images/question.png" Stretch="Uniform"/>
                </Border.Background>
            </Border>
            <StackPanel Grid.Column="1" Margin="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0"
                            Margin="20"
                            Style="{StaticResource buttonstyle}"
                            Height="40">
                        កម្រិតទាប
                    </Button>
                    <Button Grid.Row="1"
                            Margin="20"
                            Style="{StaticResource buttonstyle}"
                            Height="40">
                        កម្រិតមធ្យម
                    </Button>
                    <Button Grid.Row="2"
                            Margin="20"
                            Style="{StaticResource buttonstyle}"
                            Height="40">
                        កម្រិតខ្ពស់
                    </Button>
                </Grid>
            </StackPanel>
            <Border Grid.Column="2" >
                <Border.Background>
                    <ImageBrush ImageSource="../assets/images/question-mark.png" Stretch="Uniform"/>
                </Border.Background>
            </Border>
        </Grid>
    </Grid>
</Page>
